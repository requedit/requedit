# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件，所有配置从该文件开始
root = true

# 通用的默认设置
[*]
charset = utf-8          # 字符编码为 UTF-8
indent_style = space      # 使用空格缩进
indent_size = 2           # 缩进大小为 2 个空格
insert_final_newline = true  # 文件末尾保留一个换行符
trim_trailing_whitespace = true # 移除行末多余空格

# 针对 Markdown 文件的特殊配置
[*.md]
max_line_length = off     # 关闭 Markdown 文件中的行长限制
trim_trailing_whitespace = false # 保留 Markdown 中的行尾空格

# 针对 JSON 文件的特殊配置
[*.json]
indent_size = 2           # JSON 文件的缩进大小为 2 个空格

# 针对 YAML 文件的特殊配置
[*.yml]
indent_size = 2           # YAML 文件的缩进大小为 2 个空格

# 针对 Rust 文件的特殊配置
[*.rs]
indent_style = space
indent_size = 4           # Rust 文件的缩进大小为 2 个空格


# 针对 TypeScript 文件的特殊配置
[*.ts]
indent_size = 2           # TypeScript 文件的缩进大小为 2 个空格
